<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
 <servlet>
  <description>This is the description of my J2EE component</description>
  <display-name>This is the display name of my J2EE component</display-name>
  <servlet-name>Loginservlet</servlet-name>
  <servlet-class>servlet.Loginservlet</servlet-class>
 </servlet>
 <servlet>
  <description>This is the description of my J2EE component</description>
  <display-name>This is the display name of my J2EE component</display-name>
  <servlet-name>CourseListsServlet</servlet-name>
  <servlet-class>servlet.CourseListsServlet</servlet-class>
 </servlet>
 <servlet>
  <description>This is the description of my J2EE component</description>
  <display-name>This is the display name of my J2EE component</display-name>
  <servlet-name>SystemParaServelt</servlet-name>
  <servlet-class>servlet.SystemParaServelt</servlet-class>
 </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>QueryCrsTable</servlet-name>
    <servlet-class>servlet.QueryCrsTable</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UpdateCrsInfo</servlet-name>
    <servlet-class>servlet.UpdateCrsInfo</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UpdateGrades</servlet-name>
    <servlet-class>servlet.UpdateGrades</servlet-class>
  </servlet>



 <servlet-mapping>
  <servlet-name>Loginservlet</servlet-name>
  <url-pattern>/servlet/Loginservlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CourseListsServlet</servlet-name>
  <url-pattern>/servlet/CourseListsServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SystemParaServelt</servlet-name>
  <url-pattern>/servlet/SystemParaServelt</url-pattern>
 </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QueryCrsTable</servlet-name>
    <url-pattern>/servlet/QueryCrsTable</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateCrsInfo</servlet-name>
    <url-pattern>/servlet/UpdateCrsInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateGrades</servlet-name>
    <url-pattern>/servlet/UpdateGrades</url-pattern>
  </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
